<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Sort Mode Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/default_sort_mode"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/spinnerSortMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Slideshow Interval Text Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/slideshow_interval"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSlideshowInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="5"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchPlayToEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/play_video_to_end"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchAllowRename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/allow_rename"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchAllowDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/allow_delete"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchConfirmDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/confirm_delete"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchGridMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/grid_mode"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchShowCommandPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/show_command_panel_by_default"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchDetailedErrors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/show_detailed_errors"
            android:layout_marginBottom="24dp"/>

        <!-- Touch Zones Scheme Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/touch_zones_scheme"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:contentDescription="@string/touch_zones_scheme"
            android:scaleType="fitCenter"
            android:src="@drawable/touch_zones_scheme"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/touch_zones_legend_title"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/touch_zone_1_back"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/touch_zone_2_copy"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/touch_zone_3_rename"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/touch_zone_4_previous"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/touch_zone_5_move"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/touch_zone_6_next"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/touch_zone_7_command"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/touch_zone_8_delete"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/touch_zone_9_slideshow"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginBottom="16dp"/>

        <!-- Icon Size Text Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/default_icon_size"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIconSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
