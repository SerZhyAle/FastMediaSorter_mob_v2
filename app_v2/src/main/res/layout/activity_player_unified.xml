<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <!-- Command Panel Top (visible only in command panel mode) -->
    <!-- Per V2 spec: Back, Previous, Next | Rename, Delete, Undo | Slideshow -->
    <LinearLayout
        android:id="@+id/topCommandPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="#CC000000"
        android:visibility="gone">

        <!-- Navigation Group: Back, Previous, Next -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_back" />

        <ImageButton
            android:id="@+id/btnPreviousCmd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous"
            android:src="@android:drawable/ic_media_previous" />

        <ImageButton
            android:id="@+id/btnNextCmd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next"
            android:src="@android:drawable/ic_media_next" />

        <!-- Small indent separator -->
        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <!-- File Operations Group: Rename, Delete, Undo -->
        <ImageButton
            android:id="@+id/btnRenameCmd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rename"
            android:src="@drawable/ic_rename" />

        <ImageButton
            android:id="@+id/btnDeleteCmd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete"
            android:src="@android:drawable/ic_menu_delete" />

        <ImageButton
            android:id="@+id/btnUndoCmd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Undo"
            android:src="@android:drawable/ic_menu_revert"
            android:visibility="gone" />

        <!-- Small indent separator -->
        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <!-- Playback Group: Slideshow -->
        <ImageButton
            android:id="@+id/btnSlideshowCmd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Slideshow"
            android:src="@android:drawable/ic_media_play" />

        <!-- Additional buttons (not in V2 spec, but useful) - hidden by default in spec-compliant mode -->
        <ImageButton
            android:id="@+id/btnShareCmd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/share"
            android:src="@drawable/ic_share"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnInfoCmd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/file_information"
            android:src="@android:drawable/ic_menu_info_details"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnEditCmd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit image"
            android:src="@android:drawable/ic_menu_edit"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnFullscreenCmd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/fullscreen_mode"
            android:src="@drawable/ic_fullscreen"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Media Content Area -->
    <FrameLayout
        android:id="@+id/mediaContentArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.media3.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:show_buffering="when_playing"
            app:resize_mode="fit"
            app:controller_layout_id="@layout/custom_player_controls" />

        <!-- Audio file info overlay (visible only for audio files) -->
        <LinearLayout
            android:id="@+id/audioInfoOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginBottom="80dp"
            android:background="#CC000000"
            android:visibility="gone">

            <TextView
                android:id="@+id/audioFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:ellipsize="middle"
                android:singleLine="true" />

            <TextView
                android:id="@+id/audioFileInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2" />
        </LinearLayout>

        <!-- Standard ImageView for non-zoomable mode -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:contentDescription="@null" />

        <!-- PhotoView for zoomable mode (when loadFullSizeImages=true) -->
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/photoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:contentDescription="@null" />

        <!-- Touch zones for command panel mode (2 columns: left=Previous, right=Next) -->
        <LinearLayout
            android:id="@+id/touchZonesOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:id="@+id/touchZonePrevious"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent" />

            <View
                android:id="@+id/touchZoneNext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- 3-zone touch overlay for zoomable mode: 25% left=Previous, 50% center=Gestures, 25% right=Next -->
        <LinearLayout
            android:id="@+id/touchZones3Overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:id="@+id/touchZone3Previous"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@android:color/transparent" />

            <View
                android:id="@+id/touchZone3Gestures"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:background="@android:color/transparent" />

            <View
                android:id="@+id/touchZone3Next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Fullscreen controls overlay (visible only in fullscreen mode when showControls=true) -->
        <LinearLayout
            android:id="@+id/controlsOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:visibility="gone">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#80000000"
                app:navigationIcon="@drawable/ic_back"
                app:titleTextColor="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#80000000"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPrevious"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="◀"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlayPause"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▶"
                    android:textSize="32sp"
                    android:textColor="@android:color/white"
                    android:layout_marginHorizontal="32dp"
                    app:backgroundTint="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNext"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▶"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp"
                android:background="#80000000"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSlideShow"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SlideShow"
                    android:textColor="@android:color/white" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/loading_indicator"
            android:visibility="gone" />

        <!-- Countdown timer for slideshow (top-right corner) -->
        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:visibility="gone"
            android:text="3.." />

        <!-- Touch zones overlay for audio playback in fullscreen (3x3 grid with labels) -->
        <GridLayout
            android:id="@+id/audioTouchZonesOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="3"
            android:visibility="gone">

            <!-- Row 0: BACK, COPY, RENAME -->
            <TextView
                android:id="@+id/zoneBack"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/touch_zone_back"
                android:textColor="#D0FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#50FFFFFF" />

            <TextView
                android:id="@+id/zoneCopy"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/touch_zone_copy"
                android:textColor="#D0FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#50FFFFFF"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp" />

            <TextView
                android:id="@+id/zoneRename"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/touch_zone_rename"
                android:textColor="#D0FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#50FFFFFF" />

            <!-- Row 1: PREVIOUS, MOVE, NEXT -->
            <TextView
                android:id="@+id/zonePrevious"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/touch_zone_previous"
                android:textColor="#D0FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#50FFFFFF"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />

            <TextView
                android:id="@+id/zoneMove"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/touch_zone_move"
                android:textColor="#D0FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#50FFFFFF"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />

            <TextView
                android:id="@+id/zoneNext"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/touch_zone_next"
                android:textColor="#D0FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#50FFFFFF"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />

            <!-- Row 2: COMMAND_PANEL, DELETE, Queue -->
            <TextView
                android:id="@+id/zoneCommandPanel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/touch_zone_command_panel"
                android:textColor="#D0FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#50FFFFFF" />

            <TextView
                android:id="@+id/zoneDelete"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/touch_zone_delete"
                android:textColor="#D0FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#50FFFFFF"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp" />

            <TextView
                android:id="@+id/zoneSlideshow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/touch_zone_queue"
                android:textColor="#D0FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#50FFFFFF" />
        </GridLayout>
    </FrameLayout>

    <!-- Copy to Panel (visible only in command panel mode) -->
    <LinearLayout
        android:id="@+id/copyToPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CC004D00"
        android:padding="4dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/copyToPanelHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/copyToPanelIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▼"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:paddingEnd="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Copy to..."
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/copyToButtonsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="2"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="false" />
    </LinearLayout>

    <!-- Move to Panel (visible only in command panel mode) -->
    <LinearLayout
        android:id="@+id/moveToPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CC00004D"
        android:padding="4dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/moveToPanelHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/moveToPanelIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▼"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:paddingEnd="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Move to..."
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/moveToButtonsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="2"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="false" />
    </LinearLayout>

</LinearLayout>
