<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/file_information"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textAlignment="center"
        android:paddingBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="400dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- File Information Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_info_section"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvFileSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvFileDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvFileType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvFilePath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textIsSelectable="true"
                android:paddingBottom="4dp" />

            <!-- Image EXIF Section -->
            <LinearLayout
                android:id="@+id/sectionExif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/exif_info_section"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvExifDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvExifOrientation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvExifGPS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:paddingBottom="4dp" />
            </LinearLayout>

            <!-- Video Metadata Section -->
            <LinearLayout
                android:id="@+id/sectionVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/video_info_section"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvVideoDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvVideoResolution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvVideoCodec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvVideoBitrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvVideoFrameRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvVideoRotation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:paddingBottom="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="@android:string/ok"
        style="@style/Widget.Material3.Button" />

</LinearLayout>
