<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/ivThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:contentDescription="Thumbnail"
                android:background="?android:selectableItemBackground"
                tools:src="@android:drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:gravity="center"
                android:minWidth="80dp"
                tools:text="IMG_20231106_123456.jpg" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <CheckBox
        android:id="@+id/cbSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="8dp"
        android:elevation="8dp" />

    <!-- Operation buttons overlay (bottom-right) -->
    <LinearLayout
        android:id="@+id/llOperations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="4dp"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:background="@android:color/transparent">

        <ImageButton
            android:id="@+id/btnCopyItem"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Copy"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_save"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/btnMoveItem"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Move"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_revert"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/btnRenameItem"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rename"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_edit"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/btnDeleteItem"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_delete"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</FrameLayout>
