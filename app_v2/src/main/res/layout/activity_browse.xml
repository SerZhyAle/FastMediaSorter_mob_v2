<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.browse.BrowseActivity">

    <LinearLayout
        android:id="@+id/layoutControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_arrow_back"
            android:tint="?attr/colorControlNormal" />

        <!-- Small space after Back -->
        <Space
            android:layout_width="8dp"
            android:layout_height="1dp" />

        <!-- Sort -->
        <ImageButton
            android:id="@+id/btnSort"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/sort"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:tint="?attr/colorControlNormal" />

        <!-- Filter -->
        <ImageButton
            android:id="@+id/btnFilter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/filter"
            android:src="@android:drawable/ic_menu_search"
            android:tint="?attr/colorControlNormal" />

        <!-- Grid/List toggle -->
        <ImageButton
            android:id="@+id/btnToggleView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/toggle_view"
            android:src="@android:drawable/ic_menu_view"
            android:tint="?attr/colorControlNormal" />

        <!-- Small space -->
        <Space
            android:layout_width="8dp"
            android:layout_height="1dp" />

        <!-- Select All -->
        <ImageButton
            android:id="@+id/btnSelectAll"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/select_all"
            android:src="@drawable/ic_select_all"
            android:tint="?attr/colorControlNormal" />

        <!-- Deselect All -->
        <ImageButton
            android:id="@+id/btnDeselectAll"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/deselect_all"
            android:src="@drawable/ic_deselect_all"
            android:tint="?attr/colorControlNormal" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvResourceInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="12sp"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintTop_toBottomOf="@id/layoutControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Downloads • /storage/emulated/0/Download • 0 selected" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMediaFiles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="4dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tvResourceInfo"
        app:layout_constraintBottom_toTopOf="@id/layoutOperations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_media_file" />

    <!-- Operations bar at bottom -->
    <LinearLayout
        android:id="@+id/layoutOperations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/tvFilterWarning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Copy -->
        <ImageButton
            android:id="@+id/btnCopy"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/copy"
            android:src="@android:drawable/ic_menu_save"
            android:tint="?attr/colorControlNormal"
            android:visibility="gone" />

        <!-- Move -->
        <ImageButton
            android:id="@+id/btnMove"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/move"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="?attr/colorControlNormal"
            android:visibility="gone" />

        <!-- Rename -->
        <ImageButton
            android:id="@+id/btnRename"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/rename"
            android:src="@android:drawable/ic_menu_edit"
            android:tint="?attr/colorControlNormal"
            android:visibility="gone" />

        <!-- Delete -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/delete"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="?attr/colorControlNormal"
            android:visibility="gone" />

        <!-- Undo -->
        <ImageButton
            android:id="@+id/btnUndo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/undo"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="?attr/colorControlNormal"
            android:visibility="gone" />

        <!-- Small space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Play -->
        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/play"
            android:src="@android:drawable/ic_media_play"
            android:tint="?attr/colorControlNormal" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvFilterWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/filter_warning_bg"
        android:padding="8dp"
        android:textSize="12sp"
        android:textColor="@color/filter_warning_text"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="⚠ Filter active: name contains 'photo', created after 01.01.2024"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No media files found"
        android:textSize="16sp"
        android:textColor="?android:textColorSecondary"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Error state view for network errors -->
    <LinearLayout
        android:id="@+id/errorStateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@android:drawable/stat_notify_error"
            android:contentDescription="@string/error"
            android:tint="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/connection_failed"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/retry"
            style="@style/Widget.Material3.Button.TextButton" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
