<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchEnableCopying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/enable_copying"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/layoutCopyOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="0dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchGoToNextAfterCopy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/go_to_next_after_copy"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchOverwriteOnCopy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/overwrite_on_copy"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchEnableMoving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/enable_moving"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/layoutMoveOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="0dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchOverwriteOnMove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/overwrite_on_move"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>

        <!-- Add Destination Button (before list) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_destination"
            android:textSize="16sp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <!-- Message when no resources available -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNoResourcesMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_resources_first_message"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <!-- Destinations List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDestinations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
