<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <!-- Command Panel Top -->
    <LinearLayout
        android:id="@+id/topCommandPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="#CC000000">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@android:drawable/ic_menu_revert" />

        <ImageButton
            android:id="@+id/btnPreviousCmd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous"
            android:src="@android:drawable/ic_media_previous" />

        <ImageButton
            android:id="@+id/btnNextCmd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next"
            android:src="@android:drawable/ic_media_next" />

        <Space
            android:layout_width="16dp"
            android:layout_height="1dp" />

        <ImageButton
            android:id="@+id/btnRenameCmd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rename"
            android:src="@drawable/ic_rename" />

        <ImageButton
            android:id="@+id/btnDeleteCmd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete"
            android:src="@android:drawable/ic_menu_delete" />

        <ImageButton
            android:id="@+id/btnUndoCmd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Undo"
            android:src="@android:drawable/ic_menu_revert"
            android:visibility="gone" />

        <Space
            android:layout_width="16dp"
            android:layout_height="1dp" />

        <ImageButton
            android:id="@+id/btnFullscreenCmd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/fullscreen_mode"
            android:src="@drawable/ic_fullscreen" />

        <ImageButton
            android:id="@+id/btnSlideshowCmd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Slideshow"
            android:src="@android:drawable/ic_media_play" />
    </LinearLayout>

    <!-- Media Content Area with touch zones -->
    <FrameLayout
        android:id="@+id/mediaContentArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.media3.ui.PlayerView
            android:id="@+id/playerViewPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:show_buffering="when_playing"
            app:resize_mode="fit" />

        <ImageView
            android:id="@+id/imageViewPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:contentDescription="@null" />

        <!-- Touch zones overlay (left half - previous, right half - next) -->
        <LinearLayout
            android:id="@+id/touchZonesOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <View
                android:id="@+id/touchZonePrevious"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent" />

            <View
                android:id="@+id/touchZoneNext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </FrameLayout>

    <!-- Copy to... Panel -->
    <LinearLayout
        android:id="@+id/copyToPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CC004D00"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy to..."
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:paddingBottom="2dp" />

        <GridLayout
            android:id="@+id/copyDestinationsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="2"
            android:alignmentMode="alignBounds"
            android:useDefaultMargins="false" />
    </LinearLayout>

    <!-- Move to... Panel -->
    <LinearLayout
        android:id="@+id/moveToPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CC00004D"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move to..."
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:paddingBottom="2dp" />

        <GridLayout
            android:id="@+id/moveDestinationsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="2"
            android:alignmentMode="alignBounds"
            android:useDefaultMargins="false" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/loading_indicator"
        android:visibility="gone" />
</LinearLayout>
